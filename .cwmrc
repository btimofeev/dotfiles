bind-key 4-h group-rcycle
bind-key 4-j window-cycle-ingroup
bind-key 4-k window-rcycle-ingroup
bind-key 4C-s window-stick

fontname "DejaVu Sans:pixelsize=14"

command term st
command st st
command firefox firefox
command emacs emacsgui
command android_studio /home/boris/bin/dev/android-studio/bin/studio.sh
command telegram telegram-desktop

bind-key 4-Return st
bind-key 4-c firefox
bind-key 4-s "rofi -modi combi -show combi -combi-modi run,drun"
